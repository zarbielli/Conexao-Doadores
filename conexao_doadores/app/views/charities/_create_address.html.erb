<div class="content" id="content-user">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Cadastrar Endereço</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
										<label>Logradouro</label>
                                        <input type="text" class="form-control border-input" placeholder="Logradouro">
                                    </div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>Bairro</label>
										<input type="text" class="form-control border-input" placeholder="Bairro">
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>Numero</label>
										<input type="text" class="form-control border-input" placeholder="Numero">
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>Informações Adicionais</label>
