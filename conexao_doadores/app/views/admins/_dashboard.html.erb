<div class="content" id="content-dashboard">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-warning text-center">
                                    <i class="ti-user"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Doadores Pendentes</p>
                                    <%= donators.size%>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-reload"></i> Atualizado agora
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="content">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="icon-big icon-success text-center">
                                    <i class="ti-user"></i>
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="numbers">
                                    <p>Instituições Pendentes</p>
                                    <%= charities.size%>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <hr />
                            <div class="stats">
                                <i class="ti-reload"></i> Atualizado agora
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Doadores Pendentes</h4>
                        <p class="category">Cadastros pendentes</p>
                    </div>
                    <div class="content">
                        <div class="content table-responsive table-full-width table-wrapper">
                            <table class="table table-striped">
                                <tbody>
                                    <thead>
                                        <tr> 
                                            <th>CNPJ</th>                                            
                                            <th>Email</th>                                            
                                            <th>Aprovar</th>                                            
                                            <th>Recusar</th>                                            
                                        </tr>
                                    </thead>
                                    <% donators.each do |donator|%>
                                        <tr>
                                            <td><%= donator.cnpj %></td>
                                            
                                            <td><%= donator.email %></td>
                                            
                                            <td>
                                                <%= button_to approve_path(donator.id), method: :put, class: 'btn btn-success' do %>
                                                    <i class="fa fa-check"></i>
                                                <%end%>
                                            </td>
                                            <td>
                                                <%= button_to refuse_path(donator.id), method: :delete, class: 'btn btn-danger' do %>
                                                    <i class="fa fa-times"></i>
                                                <%end%>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                        <div class="footer">
                            <div class="chart-legend">
                                <i class="fa fa-circle text-info"></i> Open
                                <i class="fa fa-circle text-danger"></i> Click
                                <i class="fa fa-circle text-warning"></i> Click Second Time
                            </div>
                            <hr>
                            <div class="stats">
                                <i class="ti-reload"></i> Updated 3 minutes ago
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Instituições de Caride Pendentes</h4>
                        <p class="category">Cadastros pendentes</p>
                    </div>
                    <div class="content">
                       <div class="content table-responsive table-full-width table-wrapper">
