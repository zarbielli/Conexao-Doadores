                                <tbody>
                                    <thead>
                                        <tr> 
                                            <th>CNPJ</th>                                            
                                            <th>Email</th>                                            
                                            <th>Aprovar</th>                                            
                                            <th>Recusar</th>                                            
                                        </tr>
                                    </thead>
