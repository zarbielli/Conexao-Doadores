<%= stylesheet_link_tag 'login-register',
                        'http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css',
                        integrity: true, crossorigin: 'anonymous'%>
<%= javascript_include_tag 'login-register',
                           'https://code.jquery.com/ui/1.12.1/jquery-ui.min.js',
                           integrity: true, crossorigin: 'anonymous'%>

<div class="container">   
  <div class="modal fade login" id="loginModal">
    <div class="modal-dialog login animated">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Login Conexão Doadores</h4>
        </div>
        <div class="modal-body">  
          <div class="box">
            <div class="content">
              <div class="error"></div>
              <div class="form loginBox">
                <%= form_for :session, url: login_path do |form| %>
                  <div class="field">
                    <%= form.text_field :cnpj, class: "form-control", placeholder: "CNPJ" %>
                  </div>
                  <div class="field">
                    <%= form.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
                  </div>
                  <div class="actions">
                    <%= form.submit "Login", class: "btn btn-default btn-login" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="box">
            <div class="content registerBox" style="display:none;">
              <div class="form">
              <%= form_for :user, :url => {controller: "users", action: "create"} do |form| %>
                <div class="field">
                  <%= form.email_field :email, class: "form-control", placeholder: "Email"%>
                </div>
                <div class="field">
                  <%= form.text_field :cnpj, class: "form-control", placeholder: "CNPJ"%>
                </div>
                <div class="field">
                  <%= form.password_field :password, class: "form-control", placeholder: "Senha"%>
                </div>
                <div class="field">
                  <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirmação de senha "%>
                </div>
                <div class="field">
                  <%= form.select :type, [['Doador', 'Donator'], ['Caridade', 'Charity']], {include_blank: ''}, {class: "form-control", required: true}%>
                </div>
                  <div class="actions">
                    <%= form.submit "Confirmar", class: "btn btn-default btn-register" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="forgot login-footer">
            <span> Deseja
              <a href="javascript: showRegisterForm();">Criar uma conta</a>
            ?</span>
          </div>  
          <div class="forgot register-footer" style="display:none">
            <span>Ja possui uma conta?</span>
            <a href="javascript: showLoginForm();">Login</a>
          </div>
        </div>        
      </div>
    </div>
  </div>
</div>